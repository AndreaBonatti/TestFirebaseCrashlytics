<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/exceptionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exception"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/noCrashExceptionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="No Crash"
        app:layout_constraintEnd_toEndOf="@+id/exceptionButton"
        app:layout_constraintStart_toStartOf="@+id/exceptionButton"
        app:layout_constraintTop_toBottomOf="@+id/exceptionButton" />
</androidx.constraintlayout.widget.ConstraintLayout>